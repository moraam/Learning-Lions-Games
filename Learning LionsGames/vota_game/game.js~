var bg;
var sp1;
var sp2;
var xspeed=3;
var yspeed=3;
var sp1Xpos=100;
var sp1Ypos=100;
var sp2Ypos=150;
var sp3Ypos=250;
var sp4Ypos=30;
var sp5Ypos=300;
var sp6Ypos=200;
var sp7Ypos=80;
var sp8Ypos=80;
var sp9Ypos=200;
var sp10Ypos=300;
var sp11Ypos=150;
var sp12Ypos=250;
var sp13Ypos=30;

function setup(){
	createCanvas(700,400);
	bg = loadImage("/home/ll16/Desktop/vota_game/vota2.png");
	sp1 = loadImage("/home/ll16/Desktop/vota_game/ball.png");
	sp2 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp3 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp4 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp5 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp6 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp7 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp8 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp9 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp10 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp11 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp12 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
	sp13 = loadImage("/home/ll16/Desktop/vota_game/player1.png");
}

function draw(){
	background(bg);
	image(sp1,sp1Xpos,sp1Ypos,20,20);
        image(sp2,400,sp2Ypos,40,40);
	image(sp3,400,sp3Ypos,40,40);
	image(sp4,400,sp4Ypos,40,40);
	image(sp5,250,sp5Ypos,40,40);
	image(sp6,250,sp6Ypos,40,40);
	image(sp7,250,sp7Ypos,40,40);
	image(sp8,500,sp8Ypos,40,40);
	image(sp9,500,sp9Ypos,40,40);
	image(sp10,500,sp10Ypos,40,40);
	image(sp11,150,sp11Ypos,40,40);
	image(sp12,150,sp12Ypos,40,40);
	image(sp13,150,sp13Ypos,40,40);
	
	sp1Xpos= sp1Xpos+xspeed;
	sp1Ypos= sp1Ypos+yspeed;
	
	if (sp1Xpos >=700 || sp1Xpos <=0){
	     xspeed*=-1;
	}
	
	if (sp1Ypos >=400 || sp1Ypos <=0){
	     yspeed*=-1;
}

	if (keyIsDown(UP_ARROW)){
		sp2Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp2Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp3Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp3Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp4Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp4Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp5Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp5Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp6Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp6Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp7Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp7Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp8Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp8Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp9Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp9Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp10Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp10Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp11Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp11Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp12Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp12Ypos += 5;
}
	if (keyIsDown(UP_ARROW)){
		sp13Ypos -= 5;
}
	if (keyIsDown(DOWN_ARROW)){
		sp13Ypos += 5;
}


}


var bg;
var sprite1;
var sprite2;
var sprite2xpos=495;
function setup(){
createCanvas(800,400);
bg=loadImage("images/background.png");
sprite1=loadImage("images/ball.png");
sprite2=loadImage("images/player.png");
}
function draw(){
background(bg);
image(sprite1,450,200,20,20);
image(sprite2,sprite2xpos,130,120,80);

if (keyIsDown(LEFT_ARROW)){
	sprite2xpos  -= 5;
}
if (keyIsDown(RIGHT_ARROW)){
	sprite2xpos=495;

}
}																																	

